{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Debug: NestJs API Server",
      "remoteRoot": "/usr/src/app",
      "localRoot": "${workspaceFolder}",
      "protocol": "inspector",
      "port": 9229, 
      "restart": true,
      "address": "0.0.0.0",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}